        <ul class="nav-menu">
            <li class="nav-item">
                <a href="/" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
                <a href="/menu" class="nav-link">Menu</a>
            </li>
            <li class="nav-item">
                <a href="/booking" class="nav-link">Réservation</a>
            </li>
            <li class="nav-item">
                <a href="/order" class="nav-link">Commander</a>
            </li>
            <% if (loggedin == false) {%>
                <li class="nav-item">
                    <a href="/loginRegister" class="nav-link">S'inscrire / Se Connecter</a>
